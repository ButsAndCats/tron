{
  "compilerOptions": {
    "outDir": "./public/scripts/",
    "removeComments": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "scenes": ["src/scenes"],
      "game-objects": ["src/game-objects"],
      "constants": ["src/constants"]
    }
  },
  "include": [
    "**/*.ts"
  ]
}